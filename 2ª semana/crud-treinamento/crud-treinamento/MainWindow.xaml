<Window x:Class="crud_treinamento.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crud_treinamento" d:DataContext="{d:DesignInstance Type=local:MainWindowVM}"
        mc:Ignorable="d"
        Title="Cadastro de produtos" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="107*"/>
            <RowDefinition Height="110*"/>
        </Grid.RowDefinitions>
        <Button Command="{Binding adiciona}" Content="Create" HorizontalAlignment="Left" Margin="405,46,0,0" VerticalAlignment="Top" Click="Button_Click" Width="80" Background="#FF57BB15"/>
        <ListView ItemsSource="{ Binding produtosFiltrados}" SelectedItem="{Binding produtoSelecionado}" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="itens_SelectionChanged" Grid.RowSpan="2" Margin="407,129,121,3">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Nome}" >Nome
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Preco}" >Preço
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Marca}" >Marca
                    </GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Tipo}" >Tipo
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
        <Button Command="{Binding update}" x:Name="update" Content="Update" HorizontalAlignment="Left" Margin="501,46,0,0" VerticalAlignment="Top" Background="#FFCEC711" Click="update_Click" Width="80"/>
        <Button IsEnabled="{Binding produtosFiltrados.Count}" Content="Delete" Command="{Binding remove}" HorizontalAlignment="Left" Margin="597,46,0,0" VerticalAlignment="Top" Width="80" Background="#FFDE0D0D" Click="Button_Click_1"/>
        <ComboBox SelectedValuePath="Content" SelectedValue="{Binding dadoFiltro}" HorizontalAlignment="Left" Height="28" Margin="407,86,0,0" VerticalAlignment="Top" Width="117" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="TODOS"/>
            <ComboBoxItem Content="Limpeza"/>
            <ComboBoxItem Content="Bebida"/>
            <ComboBoxItem Content="Laticinio"/>
        </ComboBox>
        <Button Command="{Binding filtrar}" Content="Filtrar" HorizontalAlignment="Left" Margin="587,87,0,0" VerticalAlignment="Top" Width="92" Background="#FFFF8354" Height="27"/>
        <ComboBox SelectedValuePath="Content" SelectedValue="{Binding dadoTipoCreate}" HorizontalAlignment="Left" Height="28" Margin="260,46,0,0" VerticalAlignment="Top" Width="117" SelectionChanged="ComboBox_SelectionChanged">
            <ComboBoxItem Content="Limpeza"/>
            <ComboBoxItem Content="Bebida"/>
            <ComboBoxItem Content="Laticinio"/>
        </ComboBox>
        <Label Content="Selecione o tipo do produto para inserir" HorizontalAlignment="Left" Margin="27,47,0,0" VerticalAlignment="Top"/>
        <!--<TextBox Text="{Binding produtoNome}" HorizontalAlignment="Left" Margin="264,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox Text="{Binding produtoPreco}" HorizontalAlignment="Center" Margin="0,77,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="80"/>
        <TextBox Text="{Binding produtomarca}"  HorizontalAlignment="Left" Margin="456,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>-->

    </Grid>
</Window>
